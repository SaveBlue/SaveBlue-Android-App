<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.saveblue.saveblueapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/saveblue_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/saveblue_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.accountDetails.EditAccountActivity"
            android:label="EditAccountActivity" />
        <activity
            android:name=".ui.dashboard.profile.EditProfileActivity"
            android:label="EditProfileActivity" />
        <activity
            android:name=".ui.accountDetails.AccountDetailsActivity"
            android:label="AccountDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.addExpenseIncome.AddIncomeActivity"
            android:label="AddIncomeActivity"
            android:parentActivityName=".ui.dashboard.DashboardActivity" />
        <activity
            android:name=".ui.addExpenseIncome.AddExpenseActivity"
            android:label="AddExpenseActivity"
            android:parentActivityName=".ui.dashboard.DashboardActivity" />
        <activity
            android:name=".ui.dashboard.DashboardActivity"
            android:label="DashboardActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>